@model ICSI_UDIN.Models.CreatePassword
@{
    ViewBag.Title = "Create Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CreatePassword", "Home"))
{
    <div class="container">
        <div id="loginformblock">
            <div class="card loginformRegistrn">
                <h3 class="formgheader">Create Password</h3>
                <form>
                    @*<div class="form-group siderbarlgnform">
                            <input type="text" class="form-control formblock" id="email" value="Current Password"
                                   name="email">
                        </div>*@
                    <div class="form-group siderbarlgnform">
                        @*<input type="text" class="form-control formblock" id="pwd" value="Create Password" name="pwd">*@
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "Create Password" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group siderbarlgnform">
                        @*<input type="text" class="form-control formblock" id="pwd" value="Confirm Password" name="pwd">*@
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "Confirm Password" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="SendOtpBtn">
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script type="text/javascript">
   if (@ViewBag.ErrorMsg== 1) {
       myFunction();
   }
   function myFunction() {
       var url = '@ViewBag.Path'
       alert('Your Password is Successfully Created, Please login');
       window.location.href = '@ViewBag.Path';
   }
</script>