@model IEnumerable<ICSI_UDIN.Models.RP_GetUDINList_Result>
@{
    ViewBag.Title = "UDINList";
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}

<div class="container">

    <div id="loginformRegistrn">

        <div class="card loginformRegistrn">
            <div>
                <h4 class="formgheader">List of UDIN Documents</h4>

            </div>

            <div class="row PrintDownloadButtns">
                <div class="col-sm-12 text-right">
                    <button id="PrintListBtn" class="center-block">Print List</button>                    
                    <button id="DownloadListBtn" class="ExitLogoutBtn center-block" type="button" onclick="location.href='@Url.Action("ExportToExcel", "Home",@ViewBag.MembershipNumber)'">Download List</button>
                </div>
            </div>

            <form>

                <div style="overflow-x:auto;">
                    <table class="table">
                        <thead class="tableHead">
                            <tr>
                                <th class="theadd">S.No</th>
                                <th class="theadd">UDIN</th>
                                <th class="theadd">Membership no.</th>
                                <th class="theadd">Document Type</th>
                                <th class="theadd">Date Of Signing</th>
                                <th class="theadd">Financial Year</th>
                                <th class="theadd">Client Name</th>
                                <th class="theadd">CIN/ LLPIN / PAN</th>
                                <th class="theadd">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                int count = 0;
                            }
                            @foreach (var item in Model)
                            {
                                count++;
                            <tr>
                                <td>@count</td>

                                <td>@item.MembershipNumber</td>
                                <td>@item.MRN</td>
                                <td>@item.DocumentType</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.FinancialYear</td>
                                <td>@item.ClientName</td>
                                <td>@item.CIN</td>
                                <td><p class="statuActive"><strong>Status:</strong>Active</p> <button type="submit" class="printGreen">Print UDIN</button>                              
                                <button type="button" class="revokeRed" onclick="location.href='@Url.Action("CancelUDIN", "Home",@item)'">Revoke UDIN</button></td>
                            </tr>
                                
                            }                            

                            </tbody>
                        </table>
                </div>
                @*<div class="SendOtpBtn">
                    <button type="submit">Submit</button>
                </div>*@
            </form>
        </div>
    </div>
</div>