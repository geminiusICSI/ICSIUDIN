<script type="text/javascript">

    $(document).ready(function () {
        $('#DOB').datepicker({
            dateFormat: "mm/dd/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-60:+0"
        });
       
    });

</script>


<div class="container">
    <div id="loginformblock">
        <!----<div class="card loginformRegistrn">-->
        <h3 class="formgheader">Forgot Password</h3>

        @using (Html.BeginForm("Forgotpassword", "Home"))
        {
            @Html.AntiForgeryToken()

            <p class="ForgotPwrdFirstPare">Please input your details below to generate UDIN credentials.</p>
            <p class="ForgotPwrdSecondPare">These credentials will be sent you through email and sms that is registered with ICAI</p>
            <div class="form-group siderbarlgnform">
                <!---- <input type="text" class="form-control formblock" id="email"
                value="Membership Number (MRN)" name="email">-->
                @Html.EditorFor(model => model.MemmbershipNumber, new { htmlAttributes = new { @class = "form-control formblock ", @placeholder = "MemmbershipNumber" } })
                @Html.ValidationMessageFor(model => model.MemmbershipNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group siderbarlgnform">
                <!--<input type="text" class="form-control formblock" id="pwd" value="Date of Birth" name="pwd">-->
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { id = "DOB", @class = "form-control formblock", @placeholder = "DOB"} })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })

            </div>


            <div class="form-group siderbarlgnform">
                <!----  <input type="text" class="form-control formblock" id="pwd" value="Year of Enrolment" name="pwd">-->
                @Html.EditorFor(model => model.YearOfEnrolment, new { htmlAttributes = new { @class = "form-control formblock", @placeholder = "YearOfEnrolment" } })
                @Html.ValidationMessageFor(model => model.YearOfEnrolment, "", new { @class = "text-danger", })
            </div>
            <div class="verifybtn button">
                <input type="submit" value="Submit" />
            </div>
            <div class="text-danger">
                @ViewBag.msg

            </div>
        }
    </div>
</div>





